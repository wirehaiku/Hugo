*,:after,:before{box-sizing:border-box}body,html{margin:0;padding:0;width:100%}body{font:16px Helvetica, sans-serif;line-height:1.6rem}hr{height:1px;border:0;margin:0;padding:0}#head{color:#888;margin:1rem}#head a{margin:0 0.25rem}#body{margin:1rem}#body :first-child{margin-top:0}#body :last-child{margin-bottom:0}#body ul{margin:1rem 0;padding-left:1rem}#body ul li{padding:0.5rem}#body pre{padding:1rem 0 1rem 1rem}#body pre code{font:1.2rem Helvetica, sans-serif;line-height:2em}#body .meta{color:#888}#foot{color:#888;margin:1rem}@media (prefers-color-scheme: light){body{background:#fff;color:#000}a:link{color:#306090}a:visited{color:#603090}hr{background-color:#ddd}#body pre{border-left:1px solid #ddd}}@media (prefers-color-scheme: dark){body{background:#000;color:#fff}a:link{color:#90c0f0}a:visited{color:#c090f0}hr{background-color:#222}#body pre{border-left:1px solid #222}}
