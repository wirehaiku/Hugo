{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:blog="{{ .Permalink }}">
	<channel>
		<!-- Basic site information. -->
		<title>{{ partial "title.html" . }}</title>
		<link>{{ .Permalink }}</link>
		<description>Recent content in "{{ partial "title.html" . }}"</description>
		
		<!-- Advanced feed information. -->
		<generator>Hugo -- gohugo.io</generator>
		<language>{{ .Site.LanguageCode }}</language>
		<managingEditor>{{ .Site.Author.email }} ({{ .Site.Author.name }})</managingEditor>
		<webMaster>{{ .Site.Author.email }} ({{ .Site.Author.name }})</webMaster>
		<copyright>Â© {{ .Site.Author.name }} {{ now.Format "2006" }}.</copyright>

		<!-- Feed control data. -->
		<ttl>1440</ttl>
		<docs>https://validator.w3.org/feed/docs/rss2.html</docs>

		<!-- Feed dates. -->
		<pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
		<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>

		<!-- Item lists. -->
		{{ range where .Site.RegularPages ".Type" "posts" }}
		<item>
			<!-- Built-in fields. -->
			<title>{{ .Title }}</title>
			<link>{{ .Permalink }}</link>
			<guid>{{ .Permalink }}</guid>
			<pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
			<description>{{ .Content | html  }}</description>
			
			<!-- Custom blog fields. -->
			<blog:summary>{{ .Summary | html }}</blog:summary>
			<blog:tags>{{- range (.GetTerms "tags") }}#{{- .Name }} {{ end -}}</blog:tags>
		</item>
		{{- end }}
	</channel>
</rss>
